---
import Header from '../components/Header.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro funckery" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex justify-center items-center bg-white text-gray-800 flex-col">
    <Header />
    <div class="relative w-full max-w-screen-2xl flex flex-col justify-center px-8 py-6">
      <slot />
    </div>
  </body>
</html>
